{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "es6"],
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "rootDir": "src"
  },
  "exclude": ["node_modules"]
}
